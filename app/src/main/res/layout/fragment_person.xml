<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.person.PersonFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/shape_bg_person_head">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/unlogin">
            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qq"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="65dp"/>
            <TextView
                android:id="@+id/login"
                android:layout_width="220dp"
                android:layout_height="41dp"
                android:background="@drawable/shape_rec_radius_solid_white"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/image"
                android:layout_marginTop="10dp"
                android:text="QQ登录"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:textSize="14sp"/>
        </RelativeLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/haslogin"
           android:visibility="gone">
           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/profile_image"
               android:layout_width="96dp"
               android:layout_height="96dp"
               android:src="@mipmap/avatar"
               app:civ_border_width="5dp"
               app:civ_border_color="@color/colorPrimary"
               android:layout_centerVertical="true"
               android:layout_marginLeft="20dp"/>
           <TextView
               android:id="@+id/text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="爱哭的小仙女"
               android:textColor="#FFFFFFFF"
               android:textSize="18sp"
               android:layout_toRightOf="@+id/profile_image"
               android:layout_marginLeft="20dp"
               android:layout_alignTop="@+id/profile_image"
               android:layout_marginTop="10dp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="签名签名签名签名签名签名签名签名"
               android:textColor="#FFFFFFFF"
               android:textSize="12sp"
               android:layout_alignLeft="@+id/text"
               android:layout_below="@+id/text"
               android:layout_marginTop="11dp"/>
           <TextView
               android:id="@+id/logout"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="退出"
               android:textColor="#FFFFFFFF"
               android:textSize="14sp"
               android:layout_alignParentRight="true"
               android:layout_marginRight="20dp"
               android:layout_marginTop="45dp"
               />
       </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/feed_back">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/fankui"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:textColor="#FF333333"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/zhangjie"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#DEDEDE"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:foreground="?attr/selectableItemBackground">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/banben"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="检查版本"
            android:textColor="#FF333333"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.16"
            android:textColor="#999"
            android:textSize="14sp"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/zhangjie"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#DEDEDE"/>
</LinearLayout>